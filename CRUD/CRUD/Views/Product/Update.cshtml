@model ProductViewModel

                <form asp-controller="product" asp-action="update" asp-route-ProductId="@Model.Id" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input value="@Model.Name" id="Name" type="text" class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input value="@Model.Price" asp-for="Price" type="number" class="form-control" id="Price" step="0.01" min="0">
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <textarea class="txt-update form-control" asp-for="Description" id="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
 
            @{
                string TxtVal = Model.Description;
            }

            @section Scripts{
                <script>
        $(document).ready(function () {
            $(".txt-update").html("@TxtVal");
        })
                </script>
            }
